{
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "globals": {
    "it": true,
    "describe": true,
    "beforeEach": true,
    "afterEach": true,
    "before": true
  },
  "rules": {
    "curly": 2,
    "eqeqeq": 0,
    "wrap-iife": [
      2,
      "any"
    ],
    "no-use-before-define": 0,
    "no-caller": 2,
    "no-console": 0,
    "no-empty": 0,
    "dot-notation": 0,
    "no-undef": 2,
    "no-cond-assign": [
      2,
      "except-parens"
    ],
    "no-eq-null": 0,
    "strict": 0
  }
}
